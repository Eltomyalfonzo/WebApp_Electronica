# ===========================
#   CONFIGURACIÓN MOSQUITTO
# ===========================

# Escuchar en todas las interfaces (LAN + Internet)
listener 1883
protocol mqtt

# Habilitar WebSockets (para clientes web como tu página en Render)
listener 9001
protocol websockets

# Permitir conexiones anónimas (para pruebas)
allow_anonymous true

# Desactivar persistencia (para que no guarde mensajes entre reinicios)
persistence false

# Registrar eventos en consola (útil para debug)
log_dest stdout
log_type all

# Opcional: Limitar tamaño de mensajes
message_size_limit 0
